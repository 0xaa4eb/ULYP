                    </tooltip>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="20.0" top="20.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="TOP_RIGHT" prefWidth="200.0">
            <children>
                <Button fx:id="applyButton" onAction="#apply" mnemonicParsing="false" text="Apply">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
